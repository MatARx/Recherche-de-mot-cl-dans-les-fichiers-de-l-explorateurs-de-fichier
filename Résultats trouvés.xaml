<Window x:Class="GROS_CTRL_F.Résultats_trouvés"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GROS_CTRL_F"
        mc:Ignorable="d"
        Title="Résultats_trouvés" Height="351" Width="651">
    <Grid Margin="0,10,10,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Content="Résultat Trouvé :" Grid.Row="0" Grid.Column="0" Margin="10" FontSize="18" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <DataGrid x:Name="resultsDataGrid" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" AutoGenerateColumns="True" SelectionMode="Extended" Margin="10" RenderTransformOrigin="0.499,0.499"/>

        <Button Content="OK" Grid.Row="2" Grid.Column="1" Click="Button" Margin="10" FontSize="18" Width="100" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</Window>
